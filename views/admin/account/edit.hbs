<div class="page-title">
    <div>
        <h1>Bảng tài khoản</h1>
        <ul class="breadcrumb side">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li></li>
            <li class="active"><a href="#">Bảng tài khoản</a></li>
        </ul>
    </div>
    <div>
        <a class="btn btn-primary btn-flat" href="#"><i class="fa fa-lg fa-plus"></i></a><a
            class="btn btn-info btn-flat" href="#"><i class="fa fa-lg fa-refresh"></i></a><a
            class="btn btn-warning btn-flat" href="#"><i class="fa fa-lg fa-trash"></i></a></div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-6">
                    <div class="well bs-component">
                        <div id="success" class="alert alert-success" {{#unless  successMsg}}  hidden {{/unless}}>
                            {{ successMsg }}
                        </div>
                        <div id="err" class="alert alert-danger" {{#unless  errMsg}}  hidden {{/unless}}>
                            {{ errMsg }}
                        </div>
                        <form class="form-horizontal" action="/user/admin/edit" method="post">
                            <fieldset>
                                <legend>Legend</legend>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="title">ID</label>
                                    <div class="col-lg-10">
                                        <input class="form-control" id="id" name="id" class="form-control"
                                               readonly="true"
                                               value="{{_id}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="email">Email</label>
                                    <div class="col-lg-10">
                                        <input class="form-control" id="email" name="email" class="form-control"
                                               value="{{email}}" readonly="true">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="name">Tên</label>
                                    <div class="col-lg-10">
                                        <input class="form-control" id="name" name="name" class="form-control"
                                               value="{{name}}">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="email">SĐT</label>
                                    <div class="col-lg-10">
                                        <input class="form-control" id="phone" name="phone" class="form-control"
                                               value="{{phone}}">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="description">Địa chỉ</label>
                                    <div class="col-lg-10">
                                        <input class="form-control" id="address" name="address" class="form-control"
                                               value="{{address}}">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="description">Địa chỉ</label>
                                    <div class="col-lg-10">
                                        <input class="form-control" id="address" name="address" class="form-control"
                                               value="{{address}}">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="description">Active</label>
                                    <div class="col-lg-10">
                                        <select name="slactive" class="form-control" id="slactive">
                                            {{#if active}}
                                                <option>Có</option>
                                                <option>Không</option>
                                            {{/if}}
                                            {{#unless active}}
                                                <option>Không</option>
                                                <option>Có</option>
                                            {{/unless}}

                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="description">Admin</label>
                                    <div class="col-lg-10">
                                        <select name="sladmin" class="form-control" id="sladmin">
                                            {{#if active}}
                                                <option>Có</option>
                                                <option>Không</option>
                                            {{/if}}
                                            {{#unless active}}
                                                <option>Không</option>
                                                <option>Có</option>
                                            {{/unless}}

                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-10 col-lg-offset-2">

                                        <button type="submit" class="btn btn-primary">Edit</button>
                                    </div>
                                </div>


                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
