<form action="/user/change_password" method="post">
    <div style="padding: 30px 0;" class="container bootstrap snippet">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <span class="glyphicon glyphicon-th"></span>
                            Đổi mật khẩu
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div style="border-right: 1px solid #dfdfe0; "
                                 class="col-xs-6 col-sm-6 col-md-6 separator social-login-box"><br>
                                <img alt="" class="img-thumbnail" src="https://i.imgur.com/STwIbHW.png">
                            </div>
                            <input type="hidden" id="id" name="id" class="form-control"
                                   value="{{_id}}" />
                            <div style="margin-top:50px;" class="col-xs-6 col-sm-6 col-md-6 login-box">
                                <div class="form-group">
                                    <div style="margin-bottom:10px; " class="input-group">
                                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span>
                                        </div>
                                        <input class="form-control" id="oldpassword"  name="oldpassword"type="password" placeholder="Mật khẩu hiện tại"
                                               required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div style="margin-bottom:10px; " class="input-group">
                                        <div class="input-group-addon"><span class="glyphicon glyphicon-log-in"></span>
                                        </div>
                                        <input id="password"  name="password" class="form-control" type="password"
                                               placeholder="Mật khẩu mới" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div style="margin-bottom:10px; " class="input-group">
                                        <div class="input-group-addon"><span class="glyphicon glyphicon-repeat"></span>
                                        </div>
                                        <input id="confirm_password" class="form-control" type="password"
                                               placeholder="Nhập lại mật khẩu mới" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6"></div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <button style="padding-top: 0;padding-bottom: 0;width: 37%;"
                                        class="btn icon-btn-save btn-success" type="submit">
                                    <span style="position: relative;left: -12px;display: inline-block;padding: 6px 12px;background: rgba(0,0,0,0.15);border-radius: 3px 0 0 3px;"
                                          class="btn-save-label"><i class="glyphicon glyphicon-floppy-disk"></i></span>Lưu
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    var password = document.getElementById("password"),
            confirm_password = document.getElementById("confirm_password");

    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Password không đúng!");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
</script>