<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <!--******************-->
        <h2 style="text-align:center">Thông tin</h2>
        <div class="card">
            <img src="http://www.allpublicart.com/assets/images/user.png" alt="John">
            <div class="container-profile">
                <div style="margin: 5px;">
                    <a style="font-size: 30px; padding: 5px" href="user/edit_profile"> <span style="color: red;" class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                    <a style="font-size: 30px; padding: 5px" href="user/change_password"> <span style="color: #6D1107" class="glyphicon glyphicon-lock" aria-hidden="true"></span></a>
                </div>
                <h1 id="name">
                    {{name}}
                </h1>
                <p class="title">
                    <span class="glyphicon glyphicon-envelope"></span>&nbsp;
                    {{email}}
                </p>
                <p class="title">
                    <span class="glyphicon glyphicon-map-marker"></span>&nbsp;
                    {{address}}
                </p>
                <p class="title">
                    <span class="glyphicon glyphicon-phone-alt"></span>&nbsp;
                    {{phone}}
                </p>
                {{# if set }}
                {{else}}
                    <form action="/user/verify" method="post">
                        <button type="submit">Kích hoạt</button>
                    </form>
                {{/if}}
            </div>
        </div>
        <!--**********************-->
        <hr>
        <br>
        <div class="panel panel-default">
            <div class="row">
                <div class="col-xs-12">
                    <hr>
                    <div class="row">
                        <div class="text-center">
                            <h2>Lịch sử đặt hàng</h2><br>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div style="margin: auto; width: 90%">
                    {{# each orders }}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><strong>ĐƠn hàng</strong>
                                    Date:
                                    {{this.date}}</h3>
                            </div>

                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-condensed">
                                        <thead>
                                        <tr>
                                            <td><strong style="color: #0f0f0f">Item</strong></td>
                                            <td class="text-center"><strong style="color: #0f0f0f">Giá</strong></td>
                                            <td class="text-center"><strong style="color: #0f0f0f">Số lượng</strong>
                                            </td>
                                            <td class="text-right"><strong style="color: #0f0f0f">Tổng cộng</strong></td>
                                        </tr>
                                        </thead>

                                        <tbody>
                                        <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                        {{# each this.items }}
                                            <tr>
                                                <td>{{ this.item.title }}</td>
                                                <td class="text-center">${{ this.price }}</td>
                                                <td class="text-center">{{ this.qty }}</td>
                                                <td class="text-right">${{ this.price }}</td>
                                            </tr>
                                        {{/each}}
                                        <tr>
                                            <td class="thick-line"></td>
                                            <td class="thick-line"></td>
                                            <td class="thick-line text-center"><strong
                                                    style="color: #0f0f0f">Total</strong></td>
                                            <td class="thick-line text-right">${{ this.cart.totalPrice }}</td>
                                        </tr>

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>

    </div>
</div>