<div class="container">
    {{# if products }}
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th class="text-center">Giá</th>
                        <th class="text-center">Tổng tiền</th>
                        <th> </th>
                    </tr>
                    </thead>
                    <tbody>
                    {{# each products }}
                        <tr>
                            <td class="col-sm-8 col-md-6">
                                <div class="media">
                                    <a class="thumbnail pull-left" href="#"> <img class="media-object"
                                                                                  src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png"
                                                                                  style="width: 72px; height: 72px;">
                                    </a>
                                    <div style="margin-top: 15px;" class="media-body">
                                        <h3 class="media-heading"><a>{{ this.item.title }}</a></h3>
                                        <h4 class="media-heading"> by <a>MSI</a></h4>
                                    </div>
                                </div>
                            </td>
                            <td class="col-sm-1 col-md-1" style="text-align: center">
                                <p style="margin-top: 35px;font-size: 20px;color: black;"><strong>{{ this.qty }}</strong></p>
                            </td>
                            <td class="col-sm-1 col-md-1 text-center">
                                <p style="margin-top: 35px;font-size: 20px;color: black;"><strong>${{ this.item.price }}</strong></p>
                            </td>
                            <td class="col-sm-1 col-md-1 text-center">
                                <p style="margin-top: 35px;font-size: 20px;color: black;"><strong>${{ this.price }}</strong></p>
                            </td>
                            <td class="col-sm-1 col-md-1">
                                <div style="margin-top: 35px">
                                    <a class="btn  btn-success" href="/reduce/{{this.item._id}}"><span
                                            class="glyphicon glyphicon-minus"></span></a>
                                    <a class="btn  btn-danger" href="/remove/{{this.item._id}}"><span
                                            class="glyphicon glyphicon-remove"></span></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    <tr>
                        <td>  </td>
                        <td>  </td>
                        <td>  </td>
                        <td><h3 style="color: red">Total</h3></td>
                        <td class="text-right">
                            <h3 style="color: red;text-align: left;"><strong>$ {{ totalPrice }}</strong></h3>
                        </td>
                    </tr>
                    <tr>
                        <td>  </td>
                        <td>  </td>
                        <td>  </td>
                        <td>
                            <button type="button" class="btn btn-default">
                                <a style="text-decoration: none" href="/"><span
                                        class="glyphicon glyphicon-shopping-cart"></span> Tiếp tục mua</a>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-success">
                                <a style="color: white; text-decoration: none" href="/checkout">Thanh toán <span class="glyphicon glyphicon-play"></span></a>
                            </button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    {{ else }}
        <div style="margin: 35px 0;" class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <div style="text-align: center;" class="shopee-cart-page-empty__image">
                    <img src="https://cdn.shopee.vn/shopee/shopee-pcmall-live-vn/assets/f3540f6657bbdc1120e3f8cc90bdba97.png" alt="">
                </div>
                <div style="text-align: center;">
                    <h3><strong>Giỏ hàng của bạn còn trống</strong></h3>
                </div>
                <div style="text-align: center;padding: 20px 0;">
                    <a style="background-color: #ff5722; color:#ffffff" class="btn" href="/">Mua Sắm Ngay</a>
                </div>
            </div>
        </div>
    {{/if}}
</div>

